1) 

select bambino.codice,bambino.nome,bambino.citta
from bambino,richiesta
where bambino.codice = richiesta.codiceb and richiesta.preferenza>1

3) 

select giocattolo.codice, count(*)
from giocattolo,bambino,richiesta
where bambino.citta = 'Pisa' and bambino.codice = richiesta.codiceb and giocattolo.codice = richiesta.codiceg 
group by giocattolo.codice

4)
select giocattolo.codice, avg(richiesta.preferenza)
from giocattolo, bambino, richiesta
where bambino.citta != 'Milano' and bambino.codice = richiesta.codiceb and giocattolo.codice = richiesta.codiceg
group by giocattolo.codice
order by giocattolo.codice

1-2)

select bambino.codice, bambino.nome
from bambino,richiesta
where bambino.codice = richiesta.codiceb and richiesta.preferenza = 1

2-2)

select giocattolo.nome
from giocattolo,bambino,richiesta
where giocattolo.codice = richiesta.codiceg and bambino.codice = richiesta.codiceb and bambino.citta = 'Milano' and giocattolo.classe >2 and richiesta.preferenza >1

3-2)

select giocattolo.classe, count(*)
from giocattolo,bambino,richiesta
where bambino.citta = 'Palermo' and bambino.codice = richiesta.codiceb and giocattolo.codice = richiesta.codiceg 
group by giocattolo.classe

4-2)

select distinct bambino.nome, avg(richiesta.preferenza)
from bambino, giocattolo,richiesta
where bambino.nome not in (select bambino.nome
						   from giocattolo,bambino,richiesta
						   where giocattolo.codice = richiesta.codiceg and bambino.codice = richiesta.codiceb and giocattolo.classe = '10')
		and giocattolo.codice = richiesta.codiceg and bambino.codice = richiesta.codiceb
group by bambino.nome

2-3)

select distinct bambino.nome
from giocattolo,bambino,richiesta
where bambino.citta = 'Roma' and giocattolo.codice = richiesta.codiceg and bambino.codice = richiesta.codiceb and giocattolo.classe != '7' and richiesta.preferenza < 4

