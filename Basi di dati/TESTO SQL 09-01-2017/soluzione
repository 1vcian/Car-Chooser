1)
select scuola.codice,scuola.nome, esito.promossi
from scuola,esito
where scuola.provincia = '15' and scuola.codice = esito.codscuola and esito.anno = '2015'


2)

select *
from scuola,provincia,esito
where scuola.provincia = provincia.codprovincia and provincia.regione = 'Lazio' and esito.codscuola = scuola.codice and esito.anno > '2010' and esito.bocciati < (esito.promossi/2)

3)
select provincia.codprovincia,esito.anno,sum(promossi) as promossi
from scuola,provincia,esito
where scuola.codice = esito.codscuola and scuola.provincia = provincia.codprovincia and (scuola.tipo = 'classico' or scuola.tipo = 'scientifico') 
group by provincia.codprovincia, esito.anno

4)

select distinct provincia.codprovincia,esito.anno
from scuola join provincia on scuola.provincia = provincia.codprovincia join esito on scuola.codice = esito.codscuola
group by provincia.codprovincia,esito.anno
having sum(promossi) < sum(bocciati)
